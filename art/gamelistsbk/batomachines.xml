      <pos>0.5 0.465</pos>
      <origin>0.5 0.5</origin>
      <minSize>1 0.94</minSize>
      <zIndex>11</zIndex>
    </image>

	<image name="backgroundMachines" extra="true" region="us">
		<path>./../images/backgrounds/us/${system.theme}.jpg</path>
	</image>
		
	<image name="backgroundMachines" extra="true" region="jp">
