      <tile>false</tile>
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <path>./../images/tiles/bg.png</path>
      <color>${backgroundColor}</color>
      <zIndex>10</zIndex>
      <scale>1.30</scale>
    </image>
  
    
    <image name="backgroundMachines" extra="true">
      <tile>false</tile>
      <path>./../images/backgrounds/${system.theme}.jpg</path>
