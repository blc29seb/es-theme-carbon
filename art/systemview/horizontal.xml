<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  
  <view name="system">

	<carousel name="systemcarousel">
	    <origin>0 0.5</origin>  
		<pos>0 0.5</pos>
		<size>1 0.24</size> 		
		<color>FAFAFFA0</color>
		<colorEnd>FAFAFFB0</colorEnd>  
		<systemInfoDelay>700</systemInfoDelay>
		<systemInfoCountOnly>false</systemInfoCountOnly>
		<logoSize verticalScreen="true">0.35 0.1</logoSize>
		<maxLogoCount verticalScreen="true">1</maxLogoCount>
		<zIndex>49</zIndex>
    </carousel>
    
    <image name="carousel-inner" extra="true">
      <origin>0 0.5</origin>    		
      <path>./../images/tiles/carousel.png</path>
      <color>FFFFFFFF</color>
      <pos>0 0.5</pos>
      <size>1 0.24</size>
      <zIndex>51</zIndex>
    </image>
		
	<image name="carousel-shadow" extra="true">
		<path>./../images/tiles/shadow.png</path>
		<color>FFFFFF40</color>
		<pos>0 0.62</pos>
		<origin>0 0</origin>
		<size>1 0.025</size>
		<zIndex>30</zIndex>
    </image>	

	<image name="CenterFade" extra="true">
      <tile>false</tile>
      <size>1 0.5</size>
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
      <path>./../images/tiles/centerfade.png</path>
      <color>${centerFadeColor}</color>
      <zIndex>15</zIndex>
    </image>
	
		
  </view>
</theme>
