<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>

	<feature supported="manufacturer">
		<view name="system">
			<text name="manufacturerName" extra="static">
				<origin>1 0</origin> 
				<alignment>right</alignment>
				<pos>0.98 0.037</pos>
			</text>
	  
			<text name="fullName" extra="true">
				<origin>1 0</origin> 
				<alignment>right</alignment>
				<pos>0.98 0.12</pos>       
				<pos verticalScreen="true">0.98 0.10</pos>  
				<pos tinyScreen="true">0.98 0.13</pos>
			</text>
	  
			<text name="releaseYear" extra="true">
				<alignment>right</alignment>
				<pos>0.98 0.157</pos>
				<pos verticalScreen="true">0.98 0.127</pos>         
				<pos tinyScreen="true">0.98 0.19</pos>
			</text> 
		</view>
	</feature>  
  
  
  <include>./whitelogos.xml</include>
  
  <view name="system">

	
    <carousel name="systemcarousel">
      <type>vertical_wheel</type>
      <pos>0 -0.1</pos>
      <size>0.44 1.1</size>

      <pos>0 -0.5</pos>
      <size>0.44 1.5</size>

      <origin>0 0</origin>
      <color>00000000</color>
      <logoScale>2</logoScale>
      <logoSize>0.18 0.15</logoSize>
      <logoRotation>-14</logoRotation>
      <logoRotationOrigin>-2.9 0.2</logoRotationOrigin>
      <logoAlignment>center</logoAlignment>
      <maxLogoCount>5</maxLogoCount>
      <systemInfoDelay>0.1</systemInfoDelay>
      <zIndex>13</zIndex>
    </carousel>

   <image name="darkwheel" extra="static" tinyScreen="false">
      <tile>false</tile>
      <pos>0.22 0.25</pos>        
      <size>0.43 0.36</size>
      <origin>0.5 0.5</origin>
      <path>./../images/tiles/darkwheel.png</path>      
      <zIndex>12</zIndex>
    </image>
		
	<text name="systemInfo">
		<origin>0.5 0</origin>
		<alignment>center</alignment>
		<pos>0.7 0.6</pos>
		<size>0.58 0.3</size>
		<fontSize>0.028</fontSize>   
    </text>
	
	<text name="systemInfoEx" extra="true">
		<origin>0.5 0</origin>
		<alignment>center</alignment>
		<pos>0.7 0.6</pos>
		<size>0.58 0.3</size>
		<fontSize>0.028</fontSize>   
	</text>

	<image name="ControllerOverlay" extra="true">
	  <origin>0.5 0.5</origin>
      <pos>0.7 0.4</pos>
      <pos verticalScreen="true">0.75 0.5</pos>
	  <maxSize>0.46 0.4</maxSize> 
    </image>
    
	<video name="videobox" extra="true">
	  <origin>0.5 0.5</origin>
      <pos>0.7 0.4</pos>
	  <maxSize>0.46 0.4</maxSize> 
    </video>
	
	</view>
	
</theme>
