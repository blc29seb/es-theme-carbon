<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
   
	<feature supported="manufacturer">
		<view name="system">
		
			<text name="manufacturerName,fullName,releaseYear" extra="true">
				<origin>1 0</origin> 
				<alignment>right</alignment>
			</text>			
		
			<text name="manufacturerName" extra="static">
				<pos>0.98 0.037</pos>
			</text>
	  
			<text name="fullName" extra="true">
				<pos>0.98 0.12</pos>       
				<pos verticalScreen="true">0.98 0.10</pos>  
				<pos tinyScreen="true">0.98 0.13</pos>
			</text>
	  
			<text name="releaseYear" extra="true">
				<pos>0.98 0.157</pos>
				<pos verticalScreen="true">0.98 0.127</pos>         
				<pos tinyScreen="true">0.98 0.19</pos>
			</text> 
		</view>
	</feature>  
	
  <include>./whitelogos.xml</include>	
  
  <view name="system">
  
    <carousel name="systemcarousel">
      <type>vertical</type>
      <origin>0.5 0</origin> 
      <pos>0.22 -0.5</pos>
      <size>0.42 1.435</size>

      <pos verticalScreen="true">0 0</pos>
      <size verticalScreen="true">0.6 1</size>

      <color>00000000</color>
      <colorEnd>00000000</colorEnd>
      <gradientType>horizontal</gradientType>
      <logoScale>1.8</logoScale>
      <logoSize>0.15 0.12</logoSize>
      <maxLogoCount>5</maxLogoCount>
      <systemInfoDelay>0</systemInfoDelay>
      
      <logoSize verticalScreen="true">0.33 0.15</logoSize>
      <logoScale verticalScreen="true">1.4</logoScale>
    </carousel>
 
    <image name="carousel-back" extra="true" >
		<origin>0.5 0</origin> 
		<pos>0.22 0</pos>
		<path>./../images/tiles/white.png</path>
		<color>000000b0</color>
		<size>0.32 0.935</size>
		<zIndex>12</zIndex>
    </image>

	<image name="carousel-topline,carousel-bottomline" extra="true">
      <path>./../images/tiles/white.png</path>
      <color>${baseColor}</color>
      <size>0.002 0.935</size>
      <zIndex>45</zIndex>
    </image>

     <image name="carousel-topline" extra="true">
      <pos>0.06 0</pos>
    </image>

    <image name="carousel-bottomline" extra="true">
      <pos>0.38 0</pos>
    </image>

	<image name="CenterFade" extra="true">
	  <visible>false</visible>
      <tile>false</tile>
      <size>1 0.6</size>
      <pos>0 0.5</pos>
      <origin>0 0.5</origin>
      <path>./../images/tiles/centerfade.png</path>
      <color>${centerFadeColor}</color>
      <zIndex>19</zIndex>
    </image>
	
	<text name="systemInfo">
		<origin>0.5 0</origin>
		<alignment>center</alignment>
		<pos>0.7 0.6</pos>
		<size>0.58 0.3</size>
		<fontSize>0.028</fontSize>   
    </text>
	
	<text name="systemInfoEx" extra="true">
		<origin>0.5 0</origin>
		<alignment>center</alignment>
		<pos>0.7 0.6</pos>
		<size>0.58 0.3</size>
		<fontSize>0.028</fontSize>   
	</text>

	<image name="ControllerOverlay" extra="true">
	  <origin>0.5 0.5</origin>
      <pos>0.7 0.4</pos>
      <pos verticalScreen="true">0.75 0.5</pos>
	  <maxSize>0.46 0.4</maxSize> 
    </image>
    
	<video name="videobox" extra="true">
	  <origin>0.5 0.5</origin>
      <pos>0.7 0.4</pos>
	  <maxSize>0.46 0.4</maxSize> 
    </video>
	
	
