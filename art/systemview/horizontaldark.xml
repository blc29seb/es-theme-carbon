<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  
  <include>./horizontal.xml</include>
  <include>./whitelogos.xml</include>
  
  <view name="system">

    <carousel name="systemcarousel">
      <color>00000060</color>
      <colorEnd>00000070</colorEnd>
	  <logoSize>0.2 0.13</logoSize>
	  <logoScale>1.6</logoScale>           
    </carousel>

    <image name="carousel-topline,carousel-bottomline" extra="true">
		<path>./../images/tiles/white.png</path>
		<color>${baseColor}</color>
		<origin>0 0</origin>
		<size>1 0.005</size>
		<zIndex>55</zIndex>
	</image>

    <image name="carousel-topline" extra="true"  tinyScreen="false">
		<pos>0 0.38</pos>
    </image>

    <image name="carousel-bottomline" extra="true"  tinyScreen="false">
		<pos>0 0.62</pos>
    </image>

	<image name="carousel-shadow" extra="true">
		<visible>false</visible>
	</image>
		
  </view>
</theme>
