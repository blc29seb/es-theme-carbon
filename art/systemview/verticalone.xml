		<text name="manufacturerName,fullName,releaseYear" extra="true">
			<origin>0 0</origin>
			<alignment>left</alignment>
		</text>
		
		<text name="manufacturerName" extra="true">
			<pos>0.03 0.037</pos>
		</text>
	  
		<text name="fullName" extra="true">
			<pos>0.03 0.12</pos>       
		</text>
	  
		<text name="releaseYear" extra="true">
			<pos>0.03 0.157</pos>
		</text> 
    </view>
  </feature>  	
	
