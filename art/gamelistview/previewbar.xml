<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>

	<include>./infosbar.xml</include>

<!-- disable video on thumbnail -->
  <customView name="Carousel,Boxes,Tiles,Icons,grid">
    <imagegrid name="gamegrid">
      <showVideoAtDelay>-1</showVideoAtDelay>
    </imagegrid>
  </customView>

  <customView name="Carousel,Boxes,Tiles,Icons,grid,detailed">
  
    <image name="detailsBk" extra="true">
      <path>./../images/tiles/filter.png</path>
      <color>000000A0</color>
      <origin>0 0</origin>
      <pos>0.66 0.16</pos>
      <size>0.29 0.774</size>
      <zIndex>12</zIndex>
    </image>

    <image name="detailsBkLine" extra="true">
      <path>./../images/tiles/white.png</path>
      <color>${glowColor}</color>
      <origin>0 0</origin>
      <pos>0.66 0.16</pos>
      <size>0.003 0.775</size>
      <zIndex>14</zIndex>
    </image>  

	<image name="bottomDetailsLine" extra="true">
		<path>./../images/tiles/white.png</path>
		<color>${glowColor}</color>
		<origin>0 0</origin>
		<pos>0.66 0.935</pos>
		<size>0.29 0.004</size>
		<zIndex>14</zIndex>
	</image> 

	
    <text name="md_name">
		<origin>0.5 0.5</origin>
		<pos>0.808 0.23</pos>
		<size>0.27 0</size>
		<color>F0F0F0</color>
		<fontSize>0.035</fontSize>
		<fontPath>./../fonts/Cabin-Bold.ttf</fontPath>
		<alignment>center</alignment>
		<glowColor>${glowColor}</glowColor>
		<glowSize>2</glowSize>
		<lineSpacing>1</lineSpacing>
    </text>

    <video name="md_video">
	  <origin>0.5 0.5</origin>
      <pos>0.808 0.45</pos>
      <maxSize>0.26 0.3</maxSize>
      <delay>1</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <loops>0</loops>
    </video>
	
	<image name="developerImage" extra="true">
		<origin>1 0.5</origin>
		<pos>0.70 0.63</pos>
		<path>./../images/icons/copyright.svg</path>
		<maxSize>0.022 0.022</maxSize>
		<linearSmooth>true</linearSmooth>
		<zIndex>100</zIndex>
	</image>
	
    <text name="md_developer">
		<origin>0 0.5</origin>
		<fontPath>./../fonts/Cabin-Bold.ttf</fontPath>
		<color>EFEFFF</color>
		<pos>0.71 0.63</pos>
		<size>0.28 0.05</size>
		<alignment>left</alignment>
		<fontSize>0.025</fontSize>
    </text>
<!--    
	<image name="tv_overlay" extra="true">
      <pos>0.68 0.25</pos>
      <size>0.30 0.40</size>
      <path>./../images/tiles/tv.png</path>
      <zIndex>140</zIndex>
    </image>
-->
	
	<text name="md_description">
      <origin>0.5 0</origin>
      <pos>0.808 0.665</pos>
      <size>0.26 0.2</size>
      <color>C0C0C0</color>
      <forceUppercase>0</forceUppercase>
      <fontPath>./../fonts/Cabin-Regular.ttf</fontPath>
      <fontSize>0.023</fontSize>
    </text>
	 
	<image name="genreImage" extra="true">
		<origin>1 0.5</origin>
		<pos>0.70 0.9</pos>
		<path>./../images/icons/Games.png</path>
		<maxSize>0.025 0.04</maxSize>
		<linearSmooth>true</linearSmooth>
		<zIndex>100</zIndex>
	</image>
	
	<text name="md_genre">
		<origin>0 0.5</origin>
		<color>EFEFFF</color>
		<forceUppercase>0</forceUppercase>
		<fontPath>./../fonts/Cabin-Bold.ttf</fontPath>
		<fontSize>0.023</fontSize>
		<pos>0.71 0.9</pos>
		<size>0.23 0.035</size>
		<alignment>left</alignment>
		<singleLineScroll>true</singleLineScroll>
	</text> 
	 
  </customView>
  
	<view name="detailed">
		<textlist name="gamelist">
			<size>0.62 0.774</size>
		</textlist>
	</view>
 
  <customView name="Carousel">
    <imagegrid name="gamegrid">
      <pos>0 0.16</pos>
      <size>0.66 0.774</size>
      <autoLayout>3 1</autoLayout>
      <padding>0.01 0.18 0.01 0.24</padding>
    </imagegrid>
  </customView>
  
  <customView name="Boxes,Tiles,Icons,grid">
    <imagegrid name="gamegrid">
      <pos>0 0.16</pos>
      <size>0.66 0.84</size>
      <autoLayout>4 2</autoLayout>
    </imagegrid>
  </customView>
  
  <customView name="Tiles,Icons">
    <imagegrid name="gamegrid">
      <pos>0 0.16</pos>
      <size>0.66 0.84</size>
      <autoLayout>2 2</autoLayout>
    </imagegrid>
  </customView>

</theme>
